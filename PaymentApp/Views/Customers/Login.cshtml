@model PaymentApp.Models.Customer

@{
    ViewData["Title"] = "Sign_Up";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">
    <link href="images/favicon.png" rel="icon" />
    <title>PAYNOW</title>
    <meta name="description" content="This professional design html template is for build a Money Transfer and online payments website.">
    <meta name="author" content="harnishdesign.net">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Web Fonts
    ============================================= -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap">

    <!-- Stylesheet
    ============================================= -->
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <!-- Colors Css -->

    <link id="color-switcher" type="text/css" rel="stylesheet" href="#" />
</head>
<body>
    <!-- Preloader -->
    <!-- Preloader End -->

    <div id="main-wrapper" style="background-color: #3bb78f; background-image: linear-gradient(315deg, #3bb78f 0%, #0bab64 74%); color:white;">
        <div class="container-fluid px-0">
            <div class="row g-0 min-vh-100">
                <div class="col-md-6" style="background-color:black;color:white;">
                    <!-- Get Verified! Text
                    ============================================= -->
                    <div  style="background-color:green;" class="hero-wrap d-flex align-items-center h-100" st>
                        <div class="hero-mask opacity-8 bg-primary"></div>
                        <div class="hero-bg hero-bg-scroll" style="background-image: url('~/wwwroot/images/bg/image-3.jpg'); "></div>
                        <div class="hero-content mx-auto w-100 h-100 d-flex flex-column" style="background-color:green;">
                            <div class="row g-0">
                                <div class="col-10 col-lg-9 mx-auto">
                                    <div class="logo mt-5 mb-5 mb-md-0">
                                        <a class="d-flex" href="@Url.Action("Index", "Home")" title="Paynow">
                                            <img src="~/images/logo-light.png" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-0 my-auto">
                                <div class="col-10 col-lg-9 mx-auto">
                                    <h1 class="text-11 text-white mb-4">Get Verified!</h1>
                                    <p class="text-4 text-white lh-base mb-5">Every day, Paynow makes thousands of customers happy.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Get Verified! Text End -->
                </div>
                <div class="col-md-6 d-flex align-items-center" style="background-color:white;color:black;" >
                    <!-- SignUp Form
                    ============================================= -->
                    <div class="container my-4">
                        <div class="row g-0">
                            <div class="col-11 col-lg-9 col-xl-8 mx-auto">
                                <h3 class="fw-400 mb-4" style="color:white;">Login</h3>
                                <form id="loginForm" method="post">
                                    <div class="mb-3">
                                        <b >
                                            <label for="fullName" class="form-label">Username</label>
                                        </b>
                                            <input asp-for="CustomerName" class="form-control" />
</div>
                                   
                                    <div class="mb-3">
                                        <b >
                                            <label for="loginPassword" class="form-label">Password</label>
                                        </b>
                                            <input asp-for="CustomerPassword" class="form-control" type="password" />
</div>
                                    <div class="d-grid mt-4 mb-3"><button class="btn btn-primary" type="submit">Login</button></div>
                                </form>
                                <p class="text-3 text-center text-muted" style="color:white;">Already have an account? <a class="btn-link" href="@Url.Action("Sign_Up","Customers")">Sign Up</a></p>
                            </div>
                        </div>
                    </div>
                    <!-- SignUp Form End -->
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Top
    ============================================= -->
    <a id="back-to-top" data-bs-toggle="tooltip" title="Back to Top" href="javascript:void(0)"><i class="fa fa-chevron-up"></i></a>

    <!-- Styles Switcher -->
    <!-- Styles Switcher End -->
    <!-- Script -->

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <!-- Style Switcher -->

</body>
</html>
