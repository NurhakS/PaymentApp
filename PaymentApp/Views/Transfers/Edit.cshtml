@model PaymentApp.Models.Transfer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Transfer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransId" />
            <div class="form-group">
                <label asp-for="AccountNumberGiver" class="control-label"></label>
                <input asp-for="AccountNumberGiver" class="form-control" />
                <span asp-validation-for="AccountNumberGiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumberTaker" class="control-label"></label>
                <input asp-for="AccountNumberTaker" class="form-control" />
                <span asp-validation-for="AccountNumberTaker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-control" asp-items="ViewBag.Currency"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

